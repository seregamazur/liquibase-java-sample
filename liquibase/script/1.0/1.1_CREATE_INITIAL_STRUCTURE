create table DEVELOP.CUSTOMER
(
    ID    SERIAL PRIMARY KEY,
    NAME       VARCHAR(60) NOT NULL,
    SURNAME    VARCHAR(80) NOT NULL
);

-- CREATE SEQUENCE DEVELOP.CUSTOMER_SQ INCREMENT BY 1 START WITH 1;

create table DEVELOP.PRODUCT
(
    ID    SERIAL PRIMARY KEY,
    NAME    VARCHAR(255) NOT NULL,
    UNIT    SERIAL NOT NULL,
    FOREIGN KEY (UNIT) REFERENCES UNIT (ID));

-- CREATE SEQUENCE DEVELOP.PRODUCT_SQ INCREMENT BY 1 START WITH 1;

create table DEVELOP.ORDER
(
    ID    SERIAL PRIMARY KEY,
    DATE    VARCHAR(255) NOT NULL,
    CUSTOMER_ID    SERIAL(20) NOT NULL,
    FOREIGN KEY (CUSTOMER_ID) REFERENCES CUSTOMER (ID));

-- CREATE SEQUENCE DEVELOP.PRODUCT_SQ INCREMENT BY 1 START WITH 1;

create table DEVELOP.ORDER_JUNCTION
(
    ORDER_ID    SERIAL NOT NULL,
    PRODUCT_ID    SERIALNOT NULL,
    PRIMARY KEY (ORDER_ID, PRODUCT_ID),
    FOREIGN KEY (ORDER_ID) REFERENCES ORDER (ID),
    FOREIGN KEY (PRODUCT_ID) REFERENCES PRODUCT (ID),
    );

create table DEVELOP.UNIT(NAME    VARCHAR(100) PRIMARY KEY);
-- CREATE SEQUENCE DEVELOP.PRODUCT_SQ INCREMENT BY 1 START WITH 1;
